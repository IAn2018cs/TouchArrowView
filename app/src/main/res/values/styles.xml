<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="TouchArrowView">
        <attr name="line_min_length" format="dimension"/>
        <attr name="arrow_height" format="dimension"/>
        <attr name="arrow_bottom_half_length" format="dimension"/>
        <attr name="path_color" format="color"/>
        <attr name="point_color" format="color"/>
    </declare-styleable>

</resources>
